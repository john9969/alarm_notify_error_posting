<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="24dp"
    android:background="#FAFAFA">

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phần mềm cảnh báo"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="@android:color/holo_red_dark"
        android:paddingBottom="16dp" />

    <!-- Mô tả -->
    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="32dp"
        android:text="Ứng dụng này sẽ kiểm tra dữ liệu định kỳ và báo động khi không có dữ liệu điện báo."
        android:textAlignment="center"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp" />

    <!-- Nút bật chạy nền -->
    <Button
        android:id="@+id/btnStartBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@android:color/holo_green_dark"
        android:text="Kích hoạt cảnh báo"
        android:textColor="@android:color/white" />

    <!-- Nút test báo động -->
    <Button
        android:id="@+id/btnTestAlarm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:text="Thử cảnh báo"
        android:textColor="@android:color/white" />

</LinearLayout>
