<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="24dp"
    android:background="#101218">

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cảnh báo"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:paddingTop="12dp"
        android:paddingBottom="4dp" />

    <!-- Nội dung -->
    <TextView
        android:id="@+id/txtMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Có tín hiệu!"
        android:textSize="18sp"
        android:textAlignment="center"
        android:textColor="#D0D3D7"
        android:paddingBottom="32dp" />

    <!-- Gợi ý -->
    <TextView
        android:id="@+id/tvHint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kéo để tắt cảnh báo"
        android:textSize="14sp"
        android:textAlignment="center"
        android:textColor="#9AA0A6"
        android:paddingBottom="12dp" />

    <!-- Nút mô phỏng 'kéo để tắt' (vẫn là click, nhưng giao diện giống slider) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDismiss"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="TĂT CẢNH BÁO"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:insetTop="8dp"
        android:insetBottom="8dp"
        android:layout_marginTop="8dp"
        app:iconGravity="textStart"
        app:cornerRadius="32dp"
        app:strokeWidth="0dp"
        app:backgroundTint="#FF3B30" />

</LinearLayout>
